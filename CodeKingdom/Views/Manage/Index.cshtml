@model CodeKingdom.Models.IndexViewModel
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name:</dt>
        <dd>
            @Html.TextBoxFor(name => name.UsersFullName)
        </dd>
        <dt>E-mail:</dt>
        <dd>
            @Html.TextBoxFor(email => email.UsersEmailAddress)
        </dd>
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>
        <dt>Background:</dt>
        <dd>
            @Html.DropDownListFor(color => color.BackgroundColor,
                            new SelectList(Enum.GetValues(typeof(ConsoleColor))),
                            "Dark")
        </dd>
        <dt>Syntax highlighting:</dt>
        <dd>
            @Html.DropDownListFor(highlight => highlight.SyntaxHighlighting,
                            new SelectList(Enum.GetValues(typeof(ConsoleColor))),
                            "Monokio")
        </dd>
        <dt></dt>
        <dd>@Html.ValidationMessageFor(name => name.UsersFullName) <button type="submit">Save</button></dd>
    </dl>
</div>
