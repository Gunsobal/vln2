@model CodeKingdom.Models.IndexViewModel
@{
    ViewBag.Title = "Settings";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>E-mail:</dt>
        <dd>
            @Html.TextBoxFor(model => model.UsersEmailAddress)
        </dd>
        <br />
        <dt>Colorscheme:</dt>
        <dd>
            @Html.DropDownListFor(model => model.Colorscheme,
                            new SelectList(Enum.GetValues(typeof(ConsoleColor))),
                            "Dark")
        </dd>
        <br />
        <dt>Editor key-binding:</dt>
        <dd>
            @Html.DropDownListFor(model => model.Keybinding,
                            new SelectList(Enum.GetValues(typeof(ConsoleColor))),
                            "Monokio")
        </dd>
        <br />
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>
        </dd>
        <br />
        <br />
        <dt></dt>
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </dl>
</div>

<div>
    @Html.ActionLink("Back to Projects", "Index", "Project")
</div>

