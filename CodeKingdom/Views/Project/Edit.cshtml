@model CodeKingdom.Models.ViewModels.ProjectViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Project</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">          
            <div class="col-md-2"></div>
            <div class="col-md-10">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Collaborators) @Html.ActionLink("Add another collaborator", "Create", "Collaborator", new { id = Model.ID }, null)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.Collaborators)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Collaborator", new { id = item.ID }, null)
                                @if (item.RoleName != "Owner")
                                {
                                    @Html.ActionLink("Delete", "Delete", "Collaborator", new { id = item.ID }, null)
                                }
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
