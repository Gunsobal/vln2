<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Code Kingdom</title>

    @Styles.Render("~/Content/css")
   

</head>
<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                    <i class="fa fa-bars"></i>
                </button>
                @Html.ActionLink("Code Kingdom", "Login", "Account", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse nanbar-right navbar-main-collapse">
                <ul class="nav navbar-nav">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <!-- Intro Header -->
    <header class="intro">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h1 class="brand-heading">Code Kingdom</h1>
                        <div class="log-in-container col-md-8 col-md-offset-2" >
                            <p class="intro-text">
                                They see me coding
                                <br> They hatin
                            </p>
                            @RenderBody()
                        </div>
                         <div class="clearfix"></div>
                        <a href="#about" class="btn btn-circle page-scroll">
                            <i class="fa fa-angle-double-down animated"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- About Section -->
    <section id="about" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-xs-12">
                <h2>About Code Kingdom</h2>
                <p>CodeKingdom is an online, real-time code editor that makes you feel like royalty !
                   <br />
                   You can give other members permission to access your project and you see all changes in real-time.
                   You can also chat with all members of the project !
                   You can easily access user settings and choose a colorscheme and keybindings.
                    <br />
                   Programming languages available now are: HTML, CSS, JavaScript, C# and C++.</p>
                </div>
                <div class="col-xs-6 col-md-6">
                    <div class="thumbnail">
                        <img src="~/Content/Images/editorBlue.png" class="img-responsive" />
                    </div>
                </div>
                <div class="col-xs-6 col-md-6">
                    <div class="thumbnail">
                        <img src="~/Content/Images/editorWhite.png" class="img-responsive" />
                    </div>
                </div>
            </div>
    </section>

    <div class="container body-content">
        
       
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Code Kingdom</p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>
